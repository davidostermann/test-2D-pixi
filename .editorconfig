# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
indent_style = tab
end_of_line = lf
charset = utf-8
insert_final_newline = true

# tab indentation
[*.{css,scss}]
indent_style = space
indent_size = 2

# 2 spaces indentation for JS
[*.js]
indent_style = space
indent_size = 2

# 4 spaces indentation for PHP (PSR-2) and YAML
[*.{php,yml}]
indent_style = space
indent_size = 4

[*.{html,twig,html(twig)}]
indent_style = space
indent_size = 2
